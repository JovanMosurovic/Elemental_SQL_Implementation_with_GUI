<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.closingwindow.ClosingWindowController">
    <Label layoutX="10.0" layoutY="40.0" text="Do you want to save changes before closing?">
      <font>
         <Font name="Calibri" size="20.0" />
      </font></Label>
    <HBox layoutX="30.0" layoutY="105.0" spacing="20.0">
        <Button fx:id="saveButton" alignment="CENTER" onAction="#handleSave" prefHeight="30.0" prefWidth="100.0" text="Save">
         <font>
            <Font name="Calibri Bold" size="18.0" />
         </font></Button>
        <Button fx:id="dontSaveButton" onAction="#handleDontSave" prefHeight="34.0" prefWidth="104.0" text="Don't Save">
         <font>
            <Font name="Calibri" size="18.0" />
         </font></Button>
        <Button fx:id="cacnelButton" onAction="#handleCancel" prefHeight="30.0" prefWidth="100.0" text="Cancel">
         <font>
            <Font name="Calibri" size="18.0" />
         </font></Button>
    </HBox>
</AnchorPane>
