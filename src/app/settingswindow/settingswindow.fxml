<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="400.0" minWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.settingswindow.SettingsWindowController">

    <SplitPane dividerPositions="0.15" minHeight="400.0" minWidth="600.0">
        <VBox>
            <Label text="Font"/>
        </VBox>
        <VBox alignment="CENTER" spacing="10.0">
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Font Family:"/>
                <ComboBox fx:id="fontFamilyComboBox"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Size:"/>
                <TextField fx:id="fontSizeTextField" text="18.0"/>
                <Button onAction="#decreaseFontSize" text="-"/>
                <Button onAction="#increaseFontSize" text="+"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Adjust Font:"/>
                <Button onAction="#decreaseFontSize" text="←"/>
                <Button onAction="#increaseFontSize" text="→"/>
            </HBox>
            <SplitPane dividerPositions="0.7" orientation="VERTICAL">
                <VBox alignment="CENTER" spacing="10.0">
                    <Label text="Preview:"/>
                    <TextArea fx:id="fontPreviewTextArea" text="Sample Text"/>
                </VBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <Button onAction="#applySettings" styleClass="button-blue" text="OK"/>
                    <Button onAction="#cancelSettings" text="Cancel"/>
                    <Button onAction="#applySettings" text="Apply"/>
                </HBox>
            </SplitPane>
        </VBox>
    </SplitPane>
</AnchorPane>
