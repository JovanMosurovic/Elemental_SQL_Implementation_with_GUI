<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="400.0" minWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.settingswindow.SettingsWindowController">

    <SplitPane dividerPositions="0.15" minHeight="400.0" minWidth="600.0">
        <VBox minWidth="130.0">
            <HBox fx:id="appearanceHBox" alignment="CENTER_LEFT" onMouseClicked="#selectAppearance" styleClass="appearance-settings-HBox">
                <Label text="Appearance">
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </Label>
                <VBox.margin>
                    <Insets bottom="2.0" top="15.0" />
                </VBox.margin>
            </HBox>
            <HBox fx:id="fontHBox" onMouseClicked="#toggleFontOptions" styleClass="font-settings-HBox">
                <Label text="Font">
                    <graphic>
                        <ImageView fx:id="fontArrow" fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@../resources/icons/arrow_right_icon.png" />
                        </ImageView>
                    </graphic>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                </Label>
            <VBox.margin>
               <Insets bottom="2.0" />
            </VBox.margin>
            </HBox>
            <VBox fx:id="fontOptionsVBox" managed="false" spacing="2.0" visible="false">
                <HBox fx:id="editorHBox" onMouseClicked="#selectCodeArea" styleClass="font-option-HBox">
                    <Label text="Editor">
                        <padding>
                            <Insets left="20.0" />
                        </padding>
                    </Label>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
                </HBox>
                <HBox fx:id="consoleHBox" onMouseClicked="#selectConsole" styleClass="font-option-HBox">
                    <Label text="Console">
                        <padding>
                            <Insets left="20.0" />
                        </padding>
                    </Label>
                </HBox>
            <VBox.margin>
               <Insets />
            </VBox.margin>
            </VBox>
        </VBox>
        <VBox alignment="CENTER" spacing="10.0">
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Font Family:" />
                <ComboBox fx:id="fontFamilyComboBox" />
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Size:" />
                <Spinner fx:id="fontSizeSpinner" />
            </HBox>
            <SplitPane dividerPositions="0.7" orientation="VERTICAL">
                <VBox alignment="CENTER" spacing="10.0">
                    <Label text="Preview:" />
                    <TextArea fx:id="fontPreviewTextArea" text="Sample Text" />
                </VBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <Button minHeight="30.0" minWidth="50.0" onAction="#OKSettings" styleClass="button-blue" text="OK" />
                    <Button minHeight="30.0" minWidth="60.0" onAction="#applySettings" text="Apply" />
                    <Button minHeight="30.0" minWidth="60.0" onAction="#cancelSettings" text="Cancel" />
                </HBox>
            </SplitPane>
        </VBox>
    </SplitPane>
</AnchorPane>
