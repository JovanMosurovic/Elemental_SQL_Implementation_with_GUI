<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="app.settingswindow.SettingsWindowController"
            prefHeight="400.0" prefWidth="600.0">

    <SplitPane dividerPositions="0.15" prefHeight="400.0" prefWidth="600.0">
        <VBox>
            <Label text="Font"/>
        </VBox>
        <VBox alignment="CENTER" spacing="10.0">
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Font Family:"/>
                <ComboBox fx:id="fontFamilyComboBox"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Size:"/>
                <TextField fx:id="fontSizeTextField" text="18.0"/>
                <Button text="-" onAction="#decreaseFontSize"/>
                <Button text="+" onAction="#increaseFontSize"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Adjust Font:"/>
                <Button text="←" onAction="#decreaseFontSize"/>
                <Button text="→" onAction="#increaseFontSize"/>
            </HBox>
            <SplitPane orientation="VERTICAL" dividerPositions="0.7">
                <VBox alignment="CENTER" spacing="10.0">
                    <Label text="Preview:"/>
                    <TextArea fx:id="fontPreviewTextArea" text="Sample Text"/>
                </VBox>
                <HBox alignment="CENTER" spacing="10.0">
                    <Button text="OK" onAction="#applySettings" styleClass="button-blue"/>
                    <Button text="Cancel" onAction="#cancelSettings"/>
                    <Button text="Apply" onAction="#applySettings"/>
                </HBox>
            </SplitPane>
        </VBox>
    </SplitPane>
</AnchorPane>
