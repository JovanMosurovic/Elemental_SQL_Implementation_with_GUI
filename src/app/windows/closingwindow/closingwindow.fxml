<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="200.0" minWidth="400.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.windows.closingwindow.ClosingWindowController">
    <Label layoutX="10.0" layoutY="40.0" minHeight="20.0" minWidth="320.0"
              styleClass="dialog-header-text"
           text="Do you want to save changes before closing?"
           AnchorPane.leftAnchor="15.0" AnchorPane.topAnchor="50.0">
        <font>
            <Font name="Calibri" size="20.0"/>
        </font>
    </Label>
    <HBox alignment="CENTER" layoutY="105.0" spacing="20.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
        <Button alignment="CENTER" minHeight="30.0" minWidth="110.0" onAction="#handleSave" styleClass="button-blue"
                text="Save">
            <font>
                <Font name="Calibri Bold" size="18.0"/>
            </font>
        </Button>
        <Button alignment="CENTER" minHeight="30.0" minWidth="110.0" onAction="#handleDontSave" styleClass="button" text="Don't Save">
            <font>
                <Font name="Calibri" size="18.0"/>
            </font>
        </Button>
        <Button alignment="CENTER" minHeight="30.0" minWidth="110.0" onAction="#handleCancel" styleClass="button" text="Cancel">
            <font>
                <Font name="Calibri" size="18.0"/>
            </font>
        </Button>
    </HBox>
</AnchorPane>
